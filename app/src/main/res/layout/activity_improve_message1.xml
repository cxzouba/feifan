<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#efefef"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:text="法人信息"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wanshanxinxi1_01"/>

            <TextView
                style="@style/TextView_left"
                android:text="法人姓名"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_legal_name"
                style="@style/EditText_input"
                android:layout_marginRight="0dp"
                android:layout_weight="0.8"
                android:hint="请输入"/>

            <ImageView
                android:id="@+id/cemera1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:src="@drawable/zhaoxiang"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wanshanxinxi1_02"/>

            <TextView
                style="@style/TextView_left"
                android:text="法人身份证"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_certificate_num"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wanshanxinxi1_03"/>

            <TextView
                style="@style/TextView_left"
                android:text="手机号"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_legal_phone_num"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="phone"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:text="购车类型"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">




            <RadioGroup
                android:id="@+id/rg_isnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/new_car"/>

                <RadioButton
                    android:id="@+id/rb_new_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:text="新车"
                    android:textColor="#808080"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignBottom="@+id/rb_old_car"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_toStartOf="@+id/rb_old_car"
                    android:src="@drawable/old_car"/>

                <RadioButton
                    android:id="@+id/rb_old_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="15dp"
                    android:text="二手车"
                    android:textColor="#808080"
                    />


            </RadioGroup>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>