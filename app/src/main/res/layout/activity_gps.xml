<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_gps_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="GPS设备号："
            android:textColor="#0a0909"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_gps_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_gps_number"
            android:layout_alignBottom="@+id/tv_gps_number"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tv_gps_number"
            android:background="@null"
            android:hint="请输入GPS设备号"
            android:singleLine="true"
            android:textColor="#0a0909"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/tv_gps_number"
            android:layout_marginTop="17dp"
            android:background="#1a1919"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_gps_number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>

</ScrollView>