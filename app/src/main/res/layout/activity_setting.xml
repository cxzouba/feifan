<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/shezhi_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="用户姓名"
                />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextView_choose"
                android:text="请显示"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_img"
                        style="@style/image_left_normal"
                        android:src="@drawable/message"/>

                    <TextView
                        style="@style/TextView_left"
                        android:text="我的消息"
                        />

                    <TextView
                        style="@style/TextView_choose"
                        android:text=" "
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_point_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:paddingLeft="46dp"
                    android:src="@drawable/redpoint"
                    android:visibility="gone"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_change_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/setting1"/>

            <TextView
                android:id="@+id/tv_change_password"
                style="@style/TextView_left"
                android:text="修改密码"
                />

            <TextView
                style="@style/TextView_choose"
                android:text=" "
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/setting2"/>

            <TextView
                android:id="@+id/tv_clean_cache"
                style="@style/TextView_left"
                android:text="清除缓存"
                />

            <TextView
                style="@style/TextView_choose"
                android:text=" "
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_current_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"

                android:src="@drawable/setting3"/>

            <TextView
                android:id="@+id/tv_current_version"
                style="@style/TextView_left"
                android:text="当前版本"
                />

            <TextView
                android:id="@+id/textView15"
                style="@style/TextView_choose"

                android:text="V3.x"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/setting4"/>

            <TextView
                android:id="@+id/tv_about_us"
                style="@style/TextView_left"
                android:text="关于我们"
                />

            <TextView
                style="@style/TextView_choose"
                android:text=" "
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exit"
        />

</RelativeLayout>