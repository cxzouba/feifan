                <com.chaychan.viewlib.PowerfulEditText
                    android:id="@+id/et_contacts_phone_num2"
                    style="@style/EditText_input"
                    android:hint="请输入"
                    android:inputType="phone"/>

            </LinearLayout>

            <View
