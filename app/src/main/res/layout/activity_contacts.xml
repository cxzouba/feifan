                android:layout_height="0.8dp"
                android:background="@color/line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    android:src="@drawable/lianxiren_05"/>

                <TextView
                    style="@style/TextView_left"
                    android:text="关系"
                    />

                <TextView
                    android:id="@+id/et_contacts_relation2"
                    style="@style/TextView_choose"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    android:src="@drawable/base23"/>

                <TextView
                    style="@style/TextView_left"
                    android:text="家庭地址"/>

                <TextView
                    android:id="@+id/tv_contacts_home2"
                    style="@style/TextView_choose"
                    android:hint="选择地区"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    />

                <TextView
                    style="@style/TextView_left"
                    android:text="详细地址"
                    />

                <com.chaychan.viewlib.PowerfulEditText
                    android:id="@+id/et_contacts_addr2"
                    style="@style/EditText_input"
                    android:hint="请输入"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>