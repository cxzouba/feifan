<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="品牌车型"
                />

            <TextView
                android:id="@+id/tv_brand"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="宝马"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="车商"
                />


            <TextView
                android:id="@+id/tv_chejang"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="无"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="指导价"
                />


            <TextView
                android:id="@+id/tv_zhidao"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="78989"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="车牌号"
                />


            <TextView
                android:id="@+id/tv_chepai"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="1234567"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_07"/>

            <TextView

                style="@style/TextView_left"
                android:text="车架号"
                />

            <TextView
                android:id="@+id/tv_vin"
                style="@style/TextView_choose"
                android:text="123456789"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_07"/>

            <TextView

                style="@style/TextView_left"
                android:text="颜色"
                />

            <TextView
                android:id="@+id/tv_color"
                style="@style/TextView_choose"
                android:text="123456789"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_07"/>

            <TextView

                style="@style/TextView_left"
                android:text="变速类型"
                />

            <TextView
                android:id="@+id/tv_gearbox"
                style="@style/TextView_choose"
                android:text="123456789"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_08"/>

            <TextView

                style="@style/TextView_left"
                android:layout_weight="0.8"
                android:text="首次上牌时间"
                />

            <TextView
                android:id="@+id/tv_first_time"
                style="@style/TextView_choose"
                android:text="好几天之前"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_09"/>

            <TextView
                style="@style/TextView_left"
                android:text="行驶里程"
                />

            <TextView
                android:id="@+id/tv_run_dis"
                style="@style/TextView_choose"
                android:text="800米"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_10"/>

            <TextView
                style="@style/TextView_left"
                android:text="车辆所在地"/>

            <TextView
                android:id="@+id/tv_car_location"
                style="@style/TextView_choose"
                android:text="天朝"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_11"/>

            <TextView

                style="@style/TextView_left"
                android:text="车辆图片"
                />

            <TextView
                android:id="@+id/tv_car_pic"
                style="@style/TextView_choose"
                android:text="查看"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="业务员备注："
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/et_remarks_yewu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="业务员暂未填写"
                android:textColorHint="#b0afaf"
                android:textSize="15sp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/kaishipinggu_12"/>

            <TextView

                style="@style/TextView_left"
                android:text="评估价"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_pinggu_price"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            >

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="top"
                android:hint="备注:"
                android:textColorHint="#b0afaf"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/bt_bohui"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bohui"
                android:text="驳回"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/bt_commit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_red"
                android:enabled="false"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>


