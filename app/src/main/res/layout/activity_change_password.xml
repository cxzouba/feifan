<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efefef"
              android:padding="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bg"
        android:orientation="horizontal">

        <ImageView
            style="@style/image_left_normal"
            android:src="@drawable/xiugaimima_01"/>

        <TextView
            style="@style/TextView_left"
            android:text="原密码"
            />

        <com.chaychan.viewlib.PowerfulEditText
            android:id="@+id/et_old_password"
            style="@style/EditText_input"
            android:hint="请输入"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bg"
        android:orientation="horizontal">

        <ImageView
            style="@style/image_left_normal"
            android:src="@drawable/xiugaimima_02"/>

        <TextView
            style="@style/TextView_left"
            android:text="新密码"
            />

        <com.chaychan.viewlib.PowerfulEditText
            android:id="@+id/et_new_password"
            style="@style/EditText_input"
            android:hint="请输入"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bg"
        android:orientation="horizontal">

        <ImageView
            style="@style/image_left_normal"
            android:src="@drawable/xiugaimima_03"/>

        <TextView
            style="@style/TextView_left"
            android:text="确认密码"
            />

        <com.chaychan.viewlib.PowerfulEditText
            android:id="@+id/et_confirm_password"
            style="@style/EditText_input"
            android:hint="请输入"/>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/finish"
        android:enabled="false"/>

</LinearLayout>