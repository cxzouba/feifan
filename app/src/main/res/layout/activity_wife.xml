<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="户口类型:"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_local"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="本地"
                    android:textColor="#808080"/>


                <RadioButton
                    android:id="@+id/rb_not_local"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="50dp"
                    android:text="非本地"
                    android:textColor="#808080"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customer_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife1"/>

            <TextView
                style="@style/TextView_left"
                android:text="配偶姓名"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_name"
                style="@style/EditText_input"
                android:layout_marginRight="0dp"
                android:layout_weight="0.8"
                android:hint="请输入"/>

            <ImageView
                android:id="@+id/cemera1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:src="@drawable/zhaoxiang"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_certificate_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife2"/>

            <TextView
                style="@style/TextView_left"
                android:text="证件类型"
                />

            <TextView
                android:id="@+id/tv_wife_certificate_type"
                style="@style/TextView_choose"
                android:text="身份证"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife3"/>

            <TextView
                style="@style/TextView_left"
                android:text="证件号码"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_certificate_num"
                style="@style/EditText_input"
                android:layout_weight="0.9"
                android:hint="请输入"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife4"/>

            <TextView
                android:id="@+id/tv_phone_num"
                style="@style/TextView_left"
                android:text="手机号码"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_phone_num"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="phone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife5"/>

            <TextView
                style="@style/TextView_left"
                android:text="出生日期"
                />

            <TextView
                android:id="@+id/tv_wife_birthday"
                style="@style/TextView_choose"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife6"/>

            <TextView

                style="@style/TextView_left"
                android:text="月净收入"
                />

            <TextView
                android:id="@+id/et_wife_month_income"
                style="@style/TextView_choose"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife7"/>

            <TextView

                style="@style/TextView_left"
                android:text="月平均支出"
                />

            <TextView
                android:id="@+id/et_wife_month_pay"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife8"/>

            <TextView

                style="@style/TextView_left"
                android:text="单位名称"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_company_name"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/base23"/>

            <TextView
                style="@style/TextView_left"
                android:text="单位地址"/>


            <TextView
                android:id="@+id/tv_wife_company_home"
                style="@style/TextView_choose"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:hint="选择地区"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                />

            <TextView
                style="@style/TextView_left"
                android:text="详细地址"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_company_addr"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:layout_width="10dp"
                android:src="@drawable/wife10"/>


            <TextView
                android:id="@+id/textView13"
                style="@style/TextView_left"
                android:layout_weight="0.8"
                android:text="单位电话"/>

            <EditText
                android:id="@+id/et_area_code"
                style="@style/TextView_left"
                android:layout_weight="0.6"
                android:background="@null"
                android:gravity="center"
                android:hint="区号"
                android:inputType="number"
                android:textColor="#282727"
                android:textColorHint="#c2c1c1"
                />

            <TextView
                style="@style/TextView_left"
                android:layout_weight="0.28"
                android:gravity="center"
                android:text="—"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_wife_company_phone"
                style="@style/EditText_input"
                android:layout_weight="1"
                android:hint="手机或电话号"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:layout_weight="0.19"
                android:src="@drawable/wife11"/>

            <TextView

                style="@style/TextView_left"
                android:layout_weight="1"
                android:text="本单位入职日期"
                />

            <TextView
                android:id="@+id/tv_wife_work_time"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/wife12"/>

            <TextView

                style="@style/TextView_left"
                android:text="企业性质"
                />

            <TextView
                android:id="@+id/et_wife_company_type"
                style="@style/TextView_choose"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            >

            <EditText
                android:id="@+id/et_wife_remarks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="top"
                android:hint="备注:"
                android:textColorHint="#b0afaf"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>


