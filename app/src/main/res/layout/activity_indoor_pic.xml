<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F2F1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="身份证照片"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/certificate_up"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/shenfen_up"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:text="身份证正面"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/certificate_down"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/shenfen_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:text="身份证背面"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="银行卡照片"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bankcard_up"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/yinhang_up"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:text="银行卡正面"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bankcard_down"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/yinhang_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:text="银行卡背面"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="室内照片"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="驾驶证明文件"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_jiashizheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="户口簿"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_hukou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="房产证明"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_fangchan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="银行流水"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="APP注册截图"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_app_zhece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="APP代扣协议同意截图"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_app_daikou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="结婚证（离婚证）"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_jiehun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A8A9A8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="工作证明"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#D8D9D8"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/custom_app_gongzuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:scrollbars="horizontal"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>






