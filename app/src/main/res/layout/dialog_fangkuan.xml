<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="com.feifandaiyu.feifan.activity.personalloan.Cost1Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/zhengxintubiao_01"/>

            <TextView
                style="@style/TextView_left"
                android:text="姓名"
                />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextView_choose"
                android:hint="请显示"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:id="@+id/ll_choose_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car3"/>

            <TextView
                android:id="@+id/tv_choose_type1"
                style="@style/TextView_left"
                android:text="选择车型"
                />

            <TextView
                android:id="@+id/tv_choose_type"
                style="@style/TextView_choose"
                android:hint="请显示"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost3"
                />

            <TextView
                style="@style/TextView_left"
                android:text="贷款额"
                />

            <TextView
                android:id="@+id/tv_daikuane"
                style="@style/TextView_choose"
                android:hint="请显示"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost2"
                />

            <TextView
                style="@style/TextView_left"
                android:text="GPS价"
                />

            <TextView
                android:id="@+id/tv_gps_price"
                style="@style/TextView_choose"
                android:hint="请显示"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost11"
                />

            <TextView
                style="@style/TextView_left"
                android:text="利息差"
                />

            <TextView
                android:id="@+id/tv_lixicha"
                style="@style/TextView_choose"
                android:hint="请显示"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost6"
                />

            <TextView
                style="@style/TextView_left"
                android:layout_weight="0.70"
                android:text="放款额"
                />

            <TextView
                android:id="@+id/tv_fangkuane"
                style="@style/TextView_choose"
                android:layout_weight="1.12"
                android:hint="请显示"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/zhengxintubiao_04"/>

            <TextView
                style="@style/TextView_left"
                android:text="收款人(单位)"
                android:layout_weight="0.72"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_shoukuan_name"
                style="@style/EditText_input"
                android:layout_weight="1.1"
                android:hint="请输入"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/zhengxintubiao_04"/>

            <TextView
                style="@style/TextView_left"
                android:text="收款账号"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_shoukuan_num"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:text="是否垫付:"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/rg_dianfu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/zicha"/>

                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:text="是"
                    android:textColor="#808080"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/rb_old_car"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_toStartOf="@+id/rb_old_car"
                    android:src="@drawable/daicha"/>

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="15dp"
                    android:text="否"
                    android:textColor="#808080"
                    />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_zhouqi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/zhengxintubiao_04"/>

            <TextView
                style="@style/TextView_left"
                android:text="垫付周期"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_dianfu_num"
                style="@style/EditText_input"
                android:hint="（天）"
                android:inputType="number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

    </LinearLayout>

</ScrollView>
