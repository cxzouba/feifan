<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="com.feifandaiyu.feifan.activity.personalloan.Cost1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <!--<ImageView-->
                    <!--android:id="@+id/imageView2"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_gravity="center"-->
                    <!--/>-->

                <RadioButton
                    android:id="@+id/rb_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:text="新车"
                    android:textColor="#808080"/>

                <!--<ImageView-->
                    <!--android:id="@+id/imageView3"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignBottom="@+id/rb_old_car"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="40dp"-->
                    <!--android:layout_toStartOf="@+id/rb_old_car"-->
                    <!--/>-->

                <RadioButton
                    android:id="@+id/rb_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="70dp"
                    android:padding="15dp"
                    android:text="二手车"
                    android:textColor="#808080"
                    />


            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_gravity="center"-->
                    <!--/>-->

                <RadioButton
                    android:id="@+id/rb_jiaoyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:text="交易贷"
                    android:textColor="#808080"/>

                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_alignBottom="@+id/rb_old_car"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="26dp"-->
                    <!--android:layout_toStartOf="@+id/rb_old_car"-->
                    <!--/>-->

                <RadioButton
                    android:id="@+id/rb_chedi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:padding="15dp"
                    android:text="车抵贷"
                    android:textColor="#808080"
                    />


            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost1"
                />

            <TextView
                style="@style/TextView_left"
                android:text="贷款额"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_fapiao"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost2"
                />

            <TextView
                style="@style/TextView_left"
                android:text="GPS价"
                />

            <TextView
                android:id="@+id/tv_gps_price"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost3"
                />

            <TextView
                style="@style/TextView_left"
                android:text="商险"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_shangxian"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost4"
                />

            <TextView
                style="@style/TextView_left"
                android:text="强险"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_qiangxian"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost5"
                />

            <TextView
                style="@style/TextView_left"
                android:text="购置税"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_gouzhishui"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost7"
                />

            <TextView
                style="@style/TextView_left"
                android:text="贷款期数"
                />

            <TextView
                android:id="@+id/tv_qishu"
                style="@style/TextView_choose"
                android:hint="请选择"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost8"
                />

            <TextView
                style="@style/TextView_left"
                android:text="利息／利率"
                />

            <TextView
                android:id="@+id/tv_lilv"
                style="@style/TextView_choose"
                android:hint="请选择"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost11"
                />

            <TextView
                style="@style/TextView_left"
                android:text="利息差"
                />

            <TextView
                android:id="@+id/tv_lixicha"
                style="@style/TextView_choose"
                android:hint="请显示"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="10dp"
            android:background="@color/line"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost9"
                />

            <TextView
                style="@style/TextView_left"
                android:layout_weight="0.70"
                android:text="月供金额"
                />

            <TextView
                android:id="@+id/tv_yuegong"
                style="@style/TextView_choose"
                android:layout_weight="1.12"
                android:hint="待计算"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cost6"
                />

            <TextView
                style="@style/TextView_left"
                android:text="实际贷款额"
                />

            <TextView
                android:id="@+id/tv_daikuane"
                style="@style/TextView_choose"
                android:hint="待计算"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
