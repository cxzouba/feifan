<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="户口类型:"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_local"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="本地"
                    android:textColor="#808080"/>


                <RadioButton
                    android:id="@+id/rb_not_local"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="50dp"
                    android:text="非本地"
                    android:textColor="#808080"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_01"/>

            <TextView
                style="@style/TextView_left"
                android:text="共借人姓名"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_cautioner_name"
                style="@style/EditText_input"
                android:layout_marginRight="0dp"
                android:layout_weight="0.8"
                android:hint="请输入"/>

            <ImageView
                android:id="@+id/cemera1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:src="@drawable/zhaoxiang"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_02"/>

            <TextView
                style="@style/TextView_left"
                android:text="性别"
                />

            <TextView
                android:id="@+id/tv_sex"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_03"/>

            <TextView
                style="@style/TextView_left"
                android:text="手机号"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_cautioner_phone"
                style="@style/EditText_input"
                android:hint="请输入"
                android:inputType="phone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_04"/>

            <TextView
                style="@style/TextView_left"
                android:text="证件类型"
                />

            <TextView
                android:id="@+id/tv_choose_certificate"
                style="@style/TextView_choose"
                android:text="身份证"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"

            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_05"/>

            <TextView
                style="@style/TextView_left"
                android:text="证件号码"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_certificate_num"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_06"/>

            <TextView
                style="@style/TextView_left"
                android:text="家庭所在地"
                />

            <TextView
                android:id="@+id/tv_home"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:hint="选择地区"
                android:singleLine="true"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                />

            <TextView
                style="@style/TextView_left"
                android:text="详细地址"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_addr"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_08"/>

            <TextView

                style="@style/TextView_left"
                android:text="单位名称"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_company_name"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_09"/>

            <TextView
                style="@style/TextView_left"
                android:text="单位所在地"
                />

            <TextView
                android:id="@+id/tv_company_home"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:hint="选择地区"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                />

            <TextView

                style="@style/TextView_left"
                android:text="详细地址"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_company_addr"
                style="@style/EditText_input"
                android:hint="请输入"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"

                android:layout_width="10dp"
                android:src="@drawable/cautioner_10"/>

            <TextView

                android:id="@+id/textView13"
                style="@style/TextView_left"
                android:layout_weight="1"
                android:text="单位电话"/>

            <EditText
                android:id="@+id/et_area_code"
                style="@style/TextView_left"
                android:layout_weight="0.6"
                android:background="@null"
                android:gravity="center"
                android:hint="区号"
                android:inputType="number"
                android:textColor="#282727"
                android:textColorHint="#c2c1c1"
                />

            <TextView
                style="@style/TextView_left"
                android:layout_weight="0.28"
                android:gravity="center"
                android:text="—"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_company_phone"
                style="@style/EditText_input"
                android:layout_weight="1.0"
                android:hint="手机或电话号"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_11"/>

            <TextView
                style="@style/TextView_left"
                android:text="担保关系"
                />

            <TextView
                android:id="@+id/et_choose_relationship"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line"/>


        <LinearLayout
            android:id="@+id/ll_cautioner_pic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/cautioner_12"/>

            <TextView
                android:id="@+id/person_danbao"
                style="@style/TextView_left"
                android:layout_weight="1"
                android:text="共借人征信报告"
                />

            <TextView
                android:id="@+id/tv_look"
                style="@style/TextView_choose"
                android:layout_weight="0.9"
                android:text="请上传"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>