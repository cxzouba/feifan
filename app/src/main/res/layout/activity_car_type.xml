<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sv_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="购车类型:"
                android:textSize="16sp"/>


            <RadioGroup
                android:id="@+id/rg_isnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/new_car"/>

                <RadioButton
                    android:id="@+id/rb_new_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:text="新车"
                    android:textColor="#808080"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/rb_old_car"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_toStartOf="@+id/rb_old_car"
                    android:src="@drawable/old_car"/>

                <RadioButton
                    android:id="@+id/rb_old_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="15dp"
                    android:text="二手车"
                    android:textColor="#808080"
                    />


            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car1"/>

            <TextView
                android:id="@+id/tv_car_bank"
                style="@style/TextView_left"
                android:text="车行"
                />

            <TextView
                android:id="@+id/tv_choose_bank"
                style="@style/TextView_choose"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choose_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car3"/>

            <TextView
                android:id="@+id/tv_choose_type1"
                style="@style/TextView_left"
                android:text="选择车型"
                />

            <TextView
                android:id="@+id/tv_choose_type"
                style="@style/TextView_choose"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_example_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car4"/>

            <TextView
                style="@style/TextView_left"
                android:text="指导价"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_example_price"
                style="@style/EditText_input"
                android:hint="元"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_real_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car5"/>

            <TextView
                android:id="@+id/tv_real_price"
                style="@style/TextView_left"
                android:text="发票价"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_real_price"
                style="@style/EditText_input"
                android:hint="元"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choose_color"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car6"/>

            <TextView
                android:id="@+id/tv_choose_color"
                style="@style/TextView_left"
                android:text="颜色"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_color"
                style="@style/EditText_input"
                android:hint="请输入"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="变速类型:"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/rg_isauto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/man_speed"/>

                <RadioButton
                    android:id="@+id/rb_man_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:padding="15dp"
                    android:text="手动"
                    android:textColor="#808080"/>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/auto_speed"/>

                <RadioButton
                    android:id="@+id/rb_auto_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:padding="15dp"
                    android:text="自动"
                    android:textColor="#808080"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vin_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car7"/>

            <TextView
                android:id="@+id/tv_vin_num"
                style="@style/TextView_left"
                android:text="车架号"
                />

            <com.chaychan.viewlib.PowerfulEditText
                android:id="@+id/et_vin_num"
                style="@style/EditText_input"
                android:hint="请输入"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chepai_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:orientation="horizontal">

            <ImageView
                style="@style/image_left_normal"
                android:src="@drawable/car8"/>

            <TextView
                style="@style/TextView_left"
                android:text="车辆牌照"
                />

            <TextView
                android:id="@+id/et_chepai_num"
                style="@style/EditText_input"
                android:hint="请输入"
                android:maxLength="7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efefef"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    android:layout_weight="0.18"
                    android:src="@drawable/pinggu2_03"/>

                <TextView
                    style="@style/TextView_left"
                    android:layout_weight="0.8"
                    android:text="首次上牌时间"
                    />

                <TextView
                    android:id="@+id/tv_run_time"
                    style="@style/TextView_choose"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    android:src="@drawable/pinggu2_04"/>

                <TextView
                    style="@style/TextView_left"
                    android:text="行驶里程"
                    />

                <com.chaychan.viewlib.PowerfulEditText
                    android:id="@+id/et_run_distance"
                    style="@style/EditText_input"
                    android:hint="请输入(公里)"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_bg"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_left_normal"
                    android:src="@drawable/pinggu2_05"/>

                <TextView
                    style="@style/TextView_left"
                    android:text="车辆所在地"
                    />

                <com.chaychan.viewlib.PowerfulEditText
                    android:id="@+id/et_car_location"
                    style="@style/EditText_input"
                    android:hint="请输入"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>