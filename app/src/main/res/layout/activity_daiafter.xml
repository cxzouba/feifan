                />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                />

            <View
                android:id="@+id/view_center1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/img_location_point1"
                android:layout_width="12dp"
                android:layout_height="30dp"
                android:layout_above="@id/view_center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/map_pin"/>

            <ImageView
                android:id="@+id/img_location_back_origin1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/rl_location1"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/back_origin_normal"/>

            <RelativeLayout
                android:id="@+id/rl_location1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/location_bg">

